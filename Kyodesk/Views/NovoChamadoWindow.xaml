<Window x:Class="SistemaChamadosWpf.Views.NovoChamadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abrir Chamado" Height="300" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Novo Chamado" FontSize="18" FontWeight="Bold" />
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <Label Content="Título" />
            <TextBox x:Name="TituloTextBox" />
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <Label Content="Descrição" />
            <TextBox x:Name="DescricaoTextBox" AcceptsReturn="True" Height="100" TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Salvar" Width="80" Margin="0,0,10,0" Click="Salvar_Click" />
            <Button Content="Cancelar" Width="80" Click="Cancelar_Click" />
        </StackPanel>
    </Grid>
</Window>